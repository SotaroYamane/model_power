<div class = "login" >
<h1>ログイン</h1>

<!-- フラッシュ変数のメッセージを表示（ログインエラー時のみ） -->
<p><font color=red><%= flash[:alert] %></font></p>
</div>
<%= form_tag login_path do %>
  <table id="login_form">
    <tr>
      <td><%= label_tag :name, 'ユーザー名' %></td>
      <td><%= text_field_tag :uid, params[:uid] %></td>
    </tr>

    <tr>
      <td><%= label_tag :pass, 'パスワード' %></td>
      <td><%= password_field_tag :pass, params[:pass] %></td>
    </tr>

    <tr>
      <td><%= submit_tag "ログイン" %>&ensp;&ensp;<%= link_to '新規登録', new_user_path %></td>
    </tr>
  </table>
<% end %>
